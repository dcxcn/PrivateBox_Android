<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/POPWND_RECORD"
        android:height="@dimen/pop_wnd_iteam_height"
        android:id="@+id/popwnd_record"
        android:background="@color/pop_windwon_back_ground"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center_vertical" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/pop_wnd_iteam_height"
        android:text="@string/POPWND_RECORD"
        android:textColor="@color/white"
        android:id="@+id/popwnd_record_show"
        android:textStyle="bold"
        android:checked="false" />


</merge>
